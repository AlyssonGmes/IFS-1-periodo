import java.util.Scanner;
import java.text.DecimalFormat;
import java.lang.Math;

public class ConversorComprimento {
    public static void main(String[] args) {

        double metros, centimetros;

        Scanner input = new Scanner(System.in); //objeto de entrada
        DecimalFormat df = new DecimalFormat(".00");

        System.out.print("Digite os metros: ");
        metros = input.nextDouble();

        centimetros = metros*Math.pow(10, 2); //equação

        System.out.print("Agora você tem: "+df.format(centimetros)+ "cm.");
    }
}
